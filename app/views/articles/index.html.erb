<div class="posts-wrapper">
  <ul class="postRow">
  <% @articles.each do |article| %>
    <li class="post" id="<?=$post['type']?>-block">
      <div class="image" id="<?=$post['type']?>">
        <div class="image-mask-cover">
          <div class="image-mask"></div>
        </div>
        <h2 class="post-title"><%= article.title %></h2>
        
      </div>
      <div class="post-content">
        <div class="post-content-text"><%= article.text %></div>


        <a href="<%= article_path(article) %>" class="readmore">Читать</a>
        <%=# link_to 'Удалить', article_path(article),
            #  method: :delete,
             # class: "readmore"
              %>
      </div>
    </li>
    <% end %>
  </ul> 
</div>